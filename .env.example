# =============================================================================
# FastAPI Laravel 12 Environment Configuration
# =============================================================================
# Copy this file to .env and configure your environment variables
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
APP_NAME="FastAPI Laravel"
APP_VERSION="1.0.0"
APP_URL="http://localhost:8000"
APP_ENV="development"
APP_DEBUG=true
APP_KEY="base64:generate-this-with-python-secrets-token-urlsafe-32"
APP_TIMEZONE="UTC"
APP_LOCALE="en"

# Application Security
APP_SECRET_KEY="your-secret-key-change-this-in-production-must-be-32-chars-min"
APP_CIPHER="AES-256-CBC"
ALGORITHM="HS256"

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST="0.0.0.0"
PORT=8000
WORKERS=1
RELOAD=true
LOG_LEVEL="info"

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS,PATCH"
CORS_ALLOW_HEADERS="*"

# API Configuration
API_PREFIX="/api/v1"
API_TITLE="FastAPI Laravel API"
API_DESCRIPTION="A FastAPI application with Laravel-style architecture"
API_VERSION="1.0.0"
DOCS_URL="/docs"
REDOC_URL="/redoc"
OPENAPI_URL="/openapi.json"

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_CONNECTION="postgresql"
DB_HOST="localhost"
DB_PORT=5432
DB_DATABASE="fastapilaravel"
DB_USERNAME="postgres"
DB_PASSWORD="password"
# DB_CHARSET="utf8mb4"
# DB_COLLATION="utf8mb4_unicode_ci"

# PostgreSQL Configuration (default)
DATABASE_URL="postgresql://postgres:password@localhost:5432/fastapilaravel"

# SQLite Configuration (fallback)
# DATABASE_URL="sqlite:///./storage/database.db"

# MySQL Configuration  
# DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Migration Settings
DB_AUTO_MIGRATE=true
DB_SEED_ON_STARTUP=false

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# Session Configuration
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_DRIVER="file"
SESSION_STORE_PATH="storage/sessions"

# Password Hashing
HASH_DRIVER="bcrypt"
BCRYPT_ROUNDS=12
ARGON2_MEMORY=65536
ARGON2_TIME=4
ARGON2_THREADS=3

# Security Headers
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_FRAME_DENY=true
SECURE_CONTENT_TYPE_NOSNIFF=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="60/minute"
RATE_LIMIT_API="1000/hour"
RATE_LIMIT_AUTH="5/minute"
RATE_LIMIT_STRICT="10/minute"

# -----------------------------------------------------------------------------
# Multi-Factor Authentication (MFA)
# -----------------------------------------------------------------------------
MFA_ENABLED=true
MFA_ENFORCE_FOR_ADMINS=true
MFA_ISSUER_NAME="FastAPI Laravel"
MFA_DIGITS=6
MFA_PERIOD=30
MFA_ALGORITHM="SHA1"

# TOTP Settings
TOTP_WINDOW=1
TOTP_BACKUP_TOKENS=8
TOTP_RATE_LIMIT="5/minute"

# WebAuthn Settings
WEBAUTHN_ENABLED=true
WEBAUTHN_RP_ID="localhost"
WEBAUTHN_RP_NAME="FastAPI Laravel"
WEBAUTHN_ORIGIN="http://localhost:8000"
WEBAUTHN_TIMEOUT=60000
WEBAUTHN_USER_VERIFICATION="preferred"

# SMS MFA Settings
SMS_MFA_ENABLED=false
SMS_PROVIDER="twilio"
SMS_FROM_NUMBER="+1234567890"

# MFA Recovery
MFA_RECOVERY_CODES_COUNT=8
MFA_RECOVERY_CODES_LENGTH=8
MFA_ADMIN_BYPASS_ENABLED=true
MFA_ADMIN_BYPASS_DURATION=30

# -----------------------------------------------------------------------------
# OAuth2 Configuration
# -----------------------------------------------------------------------------
OAUTH2_ENABLED=true
OAUTH2_SECRET_KEY="your-oauth2-secret-key-change-in-production-min-32-chars"
OAUTH2_ALGORITHM="HS256"
OAUTH2_ISSUER="fastapi-laravel-oauth"
OAUTH2_AUDIENCE="api"

# OAuth2 Token Expiration
OAUTH2_ACCESS_TOKEN_EXPIRE_MINUTES=60
OAUTH2_REFRESH_TOKEN_EXPIRE_DAYS=30
OAUTH2_AUTHORIZATION_CODE_EXPIRE_MINUTES=10
OAUTH2_PERSONAL_ACCESS_TOKEN_EXPIRE_DAYS=365

# OAuth2 Security Settings
OAUTH2_REQUIRE_PKCE=true
OAUTH2_ENFORCE_HTTPS=false
OAUTH2_ALLOW_PLAIN_TEXT_PKCE=false
OAUTH2_REQUIRE_STATE=true

# OAuth2 Grant Types (comma-separated)
OAUTH2_ENABLED_GRANTS="authorization_code,client_credentials,password,refresh_token"

# OAuth2 Scopes (comma-separated)
OAUTH2_SUPPORTED_SCOPES="read,write,admin,users,roles,permissions,oauth-clients,oauth-tokens,profile,email,openid,offline_access,api,mobile,web"
OAUTH2_DEFAULT_SCOPE="read"

# OAuth2 PKCE Methods (comma-separated)
OAUTH2_PKCE_METHODS="S256,plain"

# OAuth2 Rate Limiting
OAUTH2_TOKEN_ENDPOINT_RATE_LIMIT="100/hour"
OAUTH2_INTROSPECTION_ENDPOINT_RATE_LIMIT="1000/hour"

# OAuth2 Endpoints
OAUTH2_AUTHORIZATION_ENDPOINT="/oauth/authorize"
OAUTH2_TOKEN_ENDPOINT="/oauth/token"
OAUTH2_INTROSPECTION_ENDPOINT="/oauth/introspect"
OAUTH2_REVOCATION_ENDPOINT="/oauth/revoke"
OAUTH2_USERINFO_ENDPOINT="/oauth/userinfo"
OAUTH2_JWKS_ENDPOINT="/oauth/jwks"

# OpenID Connect
OAUTH2_ENABLE_OPENID_CONNECT=true
OAUTH2_OPENID_CONNECT_ISSUER="http://localhost:8000"

# OAuth2 Client Settings
OAUTH2_ALLOW_DYNAMIC_CLIENT_REGISTRATION=false
OAUTH2_DEFAULT_CLIENT_REDIRECT_URI="http://localhost:8000/auth/callback"

# OAuth2 Database Settings
OAUTH2_PRUNE_EXPIRED_TOKENS_DAYS=7
OAUTH2_TOKEN_STORAGE_DRIVER="database"

# OAuth2 Development Settings
OAUTH2_DEBUG_MODE=false
OAUTH2_LOG_TOKENS=false

